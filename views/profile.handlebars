<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="row mt4">
    <div class="col-md-6">
        <h3>Create a new Blog Post:</h3>

        <form class="form new-blog-form">
            <div class="form-group">
                <label for="blog-post">New Post:</label>
                <input class="form-input" type="text" id="blog-post" name="blog-post" />
            </div>
            <div class="form-group">
                <label for="blog-desc">Description</label>
                <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

 {{#if blogs.length}}
  <div class="col-md-6 project-list">
    <h3>Your Blog Posts:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <!-- blog.id isn't working for some reason, but the route does -->
        <h4><a href="/blog/{{blog.id}}">{{blog.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/profile.js"></script>