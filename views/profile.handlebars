<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

<div class="row mt4">
    <div class="col-md-6">
        <h3>Create a new Blog Post:</h3>

        <form class="form new-blog-form">
            <div class="form-group">
                <label for="blog-post">New Post:</label>
                <input class="form-input" type="text" id="blog-post" name="blog-post" />
            </div>
            <div class="form-group">
                <label for="blog-desc">Description</label>
                <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

{{#each blogs as |blog| }}
<div>
    <h2>{{blog.name}}</h2>
    <p>{{blog.description}}</p>
</div>
{{/each}}
<script src="/js/profile.js"></script>